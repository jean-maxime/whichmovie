<div id="form_search">
<%= form_tag("/movies", method: "get", id: "form_search") do %><!--
--><div><%= text_field_tag(:search, nil, placeholder: 'Which film are you looking for ? ', value: params[:search]) %><!--
--><%= submit_tag("Search", :id => "submit") %></div><!--
--><% end %>
</div>

<% if params[:search].present? %>
	<div id="result_search_container">
		<%  @result.each do |task| %>
			<div class="result_search">
				<p><%= task.title %><p>
				<% if !task.poster_path.nil? %>
					<%= link_to image_tag("https://image.tmdb.org/t/p/w185/"+task.poster_path, alt: task.title), {:action => 'index', :controller => 'description', :id => task.id}  %>
				<% else %>
					<%= link_to image_tag('unknow.jpg', alt: "unknonw"), {:action => 'index', :controller => 'description', :id => task.id} %>
				<% end %>
				<div class="choice"><span class="wish">VIEW</span><span class="viewed">TO SEE</span></div>
			</div>
		<% end %>
	</div>
<% else %>
	<div id="result_search_container">
		<ul>
		    <li><a href="#tabs-1">Popular</a></li>
		    <li><a href="#tabs-2">This week</a></li>
		    <li><a href="#tabs-3">Coming</a></li>
	    </ul>
	  	<div id="tabs-1">
		    <%  @popular.each do |task| %>
			<div class="result_search">
				<p><%= task.title %><p>
				<% if !task.poster_path.nil? %>
					<%= link_to image_tag("https://image.tmdb.org/t/p/w185/"+task.poster_path, alt: task.title), {:action => 'index', :controller => 'description', :id => task.id}  %>
				<% else %>
					<%= link_to image_tag('unknow.jpg', alt: "unknonw"), {:action => 'index', :controller => 'description', :id => task.id} %>
				<% end %>
				<div class="choice">
					<span class="wish"><%= link_to 'VIEWED', {:controller => "movie_properties", :action => "create", :id_film => task.id, :id_user => current_user.id, :state => 'viewed'} %></span>
					<span class="viewed"><%= link_to 'TO SEE', {:controller => "movie_properties", :action => "create", :id_film => task.id, :id_user => current_user.id, :state => 'to see'} %></span>
				</div>
			</div>
		<% end %>
	  	</div>
	  	<div id="tabs-2">
		    <%  @now.each do |task| %>
			<div class="result_search">
				<p><%= task.title %><p>
				<% if !task.poster_path.nil? %>
					<%= link_to image_tag("https://image.tmdb.org/t/p/w185/"+task.poster_path, alt: task.title), {:action => 'index', :controller => 'description', :id => task.id}  %>
				<% else %>
					<%= link_to image_tag('unknow.jpg', alt: "unknonw"), {:action => 'index', :controller => 'description', :id => task.id} %>
				<% end %>
				<div class="choice"><span class="wish">VIEW</span><span class="viewed">TO SEE</span></div>
			</div>
		<% end %>
	  	</div>
	  	<div id="tabs-3">
		    <%  @upcoming.each do |task| %>
			<div class="result_search">
				<p><%= task.title %><p>
				<% if !task.poster_path.nil? %>
					<%= link_to image_tag("https://image.tmdb.org/t/p/w185/"+task.poster_path, alt: task.title), {:action => 'index', :controller => 'description', :id => task.id}  %>
				<% else %>
					<%= link_to image_tag('unknow.jpg', alt: "unknonw"), {:action => 'index', :controller => 'description', :id => task.id} %>
				<% end %>
				<div class="choice"><span class="wish">VIEW</span><span class="viewed">TO SEE</span></div>
			</div>
		<% end %>
	  	</div>



	</div>
<% end %>
